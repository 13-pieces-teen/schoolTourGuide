<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_menu.fragment_setting">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="517dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/background_gray"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:text="用户设置"
            android:textColor="#B0000000"
            android:textSize="30dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="#aa000000" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:layout_marginTop="15dp"
            android:background="@color/background_gray">

            <ImageView
                android:id="@+id/im_head"
                android:layout_width="87dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_face_24" />

            <TextView
                android:layout_width="212dp"
                android:layout_height="52dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="79dp"
                android:layout_toEndOf="@+id/im_head"
                android:text="加入地图导航系统"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_登陆"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="150dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/im_head"
                android:text="登录或注册账号"
                android:textColor="@color/grey"
                android:textSize="18dp" />


        </RelativeLayout>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@color/background_gray"
            android:gravity="center_vertical"
            android:text="关于我们"
            android:textColor="#909789"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="@color/background_gray"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="意见与反馈"
            android:textColor="@color/black"
            android:textSize="28dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#aa000000" />

        <TextView
            android:id="@+id/tv_group"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="开发人员"
            android:textColor="@color/black"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/tv_egg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_gray" />

    </LinearLayout>


</FrameLayout>